@page "/search/{SearchTerm}"
@page "/search/{SearchTerm}/maxlenght/{MaxLenght:int}"
@inherits SearchPageBase

<MudBreadcrumbs Items="Items"></MudBreadcrumbs>

@if (SearchResult == null)
{
    <MudPaper Class="d-flex justify-center flex-grow-1 gap-4" Elevation="0">
        <MudProgressCircular Color="Color.Tertiary" Size="Size.Large" Indeterminate="true"/>
    </MudPaper>
}
else
{
    <MudGrid >
        <MudItem Class="align-self-center" xs="12" md="3" lg="2">
            <MudText  Typo="Typo.h5">Search result for @SearchTerm</MudText>
        </MudItem>
        <MudItem xs="12" md="9" lg="10">
            <SearchFilter SearchTerm="@SearchTerm"></SearchFilter>
        </MudItem>
        <TrailDetail Trail="SelectedTrail"></TrailDetail>
        <br/>
    </MudGrid>
    <MudGrid Spacing="3">
        <DisplayTrails Trails="@SearchResult" OnSelected="HandleTrailSelected"></DisplayTrails>
    </MudGrid>
}